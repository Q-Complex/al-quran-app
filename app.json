{
  "expo": {
    "name": "Al-Quran",
    "slug": "al-quran",
    "version": "1.2.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "description": "Al Quran is a modern application designed to provide users with a seamless and customizable Quran reading experience.",
    "scheme": "al-quran",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "ExpoLocalization_supportsRTL": true,
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "locales": {
      "ar": "./lib/ui/locales/metadata/ar.json",
      "tr": "./lib/ui/locales/metadata/tr.json"
    },
    "extra": {
      "supportsRTL": true,
      "router": {},
      "eas": {
        "projectId": "a6444652-d5c0-4f1f-8cfd-2e2070b65e6b"
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.youzarsiph.alquran"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#f7f5f3",
          "image": "./assets/images/splash-icon.png",
          "dark": {
            "image": "./assets/images/splash-icon-dark.png",
            "backgroundColor": "#09090b"
          },
          "imageWidth": 300
        }
      ],
      "expo-sqlite",
      "expo-localization",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Indopak.ttf",
            "./assets/fonts/Uthmanic.ttf",
            "node_modules/@expo-google-fonts/noto-kufi-arabic/400Regular/NotoKufiArabic_400Regular.ttf"
          ]
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
