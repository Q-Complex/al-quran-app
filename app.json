{
  "expo": {
    "name": "Al Quran",
    "slug": "al-quran",
    "owner": "youzarsiph",
    "version": "1.0.0",
    "description": "Al Quran is a modern application designed to provide users with a seamless and customizable Quran reading experience.",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "al-quran",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "ExpoLocalization_supportsRTL": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.youzarsiph.alquran"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "supportsRTL": true,
      "forcesRTL": true
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "assets/fonts/Indopak.ttf",
            "assets/fonts/Uthmanic.ttf",
            "node_modules/@expo-google-fonts/noto-sans/NotoSans_400Regular.ttf",
            "node_modules/@expo-google-fonts/noto-kufi-arabic/NotoKufiArabic_400Regular.ttf"
          ]
        }
      ],
      "expo-localization",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
